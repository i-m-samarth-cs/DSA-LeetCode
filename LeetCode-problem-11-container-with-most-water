//Solution :
class Solution {
    public int maxArea(int[] height) {
        int l=0;
        int n=height.length;
        int max=0;
        int r=n-1;
       while (l < r) {
            int b = Math.min(height[l], height[r]);  
            int area = b * (r - l);                   
            max = Math.max(max, area);
            if (height[l] < height[r]) {
                l++;
            } else {
                r--;
            }
        }
        return max;
    }
}
